        image = 'asset/image/thedeveloper.jpg'
        slogan = 'I make the front-end world a better place every day.'
        achievement = {
                title: 'achievement',
                content: 'I have 10 projects online, go to projects section to see them.',
        }
        coolStuff = {
            title: 'grab cool stuff',
            buttonList: [
                {
                    url: 'https://github.com/a11exandru/my-cv-final',
                    icon: 'my-cv__icon--github',
                    text: 'Click to visit the GitHub project source'
                },
                {
                    url: 'asset/doc/resume Alex Puiu.docx',
                    icon: 'my-cv__icon--file-word',
